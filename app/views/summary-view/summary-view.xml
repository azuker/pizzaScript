<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      actionBarHidden="true"
      loaded="loaded"
      class="page-container">
    <StackLayout verticalAlignment="center">
        <Image src="res://logo"
               stretch="aspectFit"
               class="logo-image logo-image-summary"
               horizontalAlignment="center" />
        <StackLayout class="thank-you-label-wrapper" id="thank-you-label-wrapper">
            <Label ios:text="Thank you, iOS user"
                   android:text="Thank you, Android user"
                   textWrap="true"
                   class="thank-you-label thank-you-label-header"/>
            <Label text="Your order will soon arrive in" textWrap="true" class="thank-you-label"/>
            <Label text="{{city}}" class="thank-you-label" visibility="{{ city ? 'visible' : 'collapsed' }}"/>
            <Label text="{{region_name}}" class="thank-you-label" visibility="{{ region_name ? 'visible' : 'collapsed' }}"/>
            <Label text="{{country_name}}" class="thank-you-label" visibility="{{ country_name ? 'visible' : 'collapsed' }}"/>
        </StackLayout>
    </StackLayout>
</Page>
