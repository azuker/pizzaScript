<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:logo="shared/components/logo"
      actionBarHidden="true"
      loaded="loaded"
      class="page-container">
    <StackLayout verticalAlignment="center">
        <logo:logo/>
        <StackLayout class="label-wrapper">
            <Label text="Thank you for your order" textWrap="true" class="thank-you-label-header"/>
            <Label text="It will arrive soon in" textWrap="true"/>
            <Label text="{{city}}" visibility="{{ city ? 'visible' : 'collapsed' }}"/>
            <Label text="{{region_name}}" visibility="{{ region_name ? 'visible' : 'collapsed' }}"/>
            <Label text="{{country_name}}" visibility="{{ country_name ? 'visible' : 'collapsed' }}"/>
        </StackLayout>
        <StackLayout class="label-wrapper" id="info-label-wrapper">
            <Label textWrap="true">
                <FormattedString>
                    <Span text="Did you know? As an "/>
                    <Span ios:text="iOS" android:text="android"/>
                    <Span text=" user, "/>
                    <android>
                        <Span text="you're 71% more likely than an iOS user to have never traveled outside your native country." />
                    </android>
                    <ios>
                        <Span text="you're 39% more likely than an Android user to say you're high-maintenance."/>
                    </ios>
                </FormattedString>
                <!-- according to https://androidandme.com/2011/08/news/android-vs-ios-stereotypes-and-lifestyles/ -->
            </Label>
        </StackLayout>
    </StackLayout>
</Page>
