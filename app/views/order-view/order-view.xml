<Page class="page"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      actionBarHidden="true"
      loaded="loaded"
      navigatingTo="navigatingTo"
      class="order-view-page">
    <GridLayout rows="auto, *, auto">
        <Label text="{{'Hi ' + username + '!'}}" row="0" class="order-label order-label-greeting"/>
        <StackLayout row="1">
            <Repeater items="{{ sizes }}"
                      itemTap="onSelectSize" >
                <Repeater.itemsLayout>
                    <WrapLayout class="sizes-stack-layout" />
                </Repeater.itemsLayout>
                <Repeater.itemTemplate>
                    <StackLayout class="sizes-item-wrapper" verticalAlignment="bottom" >
                        <Image stretch="aspectFit" src="res://pizza_circle" height="{{displaySize}}" width="{{displaySize}}" />
                        <Label text="{{ name }}" class="sizes-text-description"/>
                        <ContentView class="{{isSelected? size-marker-selected : size-marker-unselected}}"/>
                        <Label text="{{ price }}" class="sizes-price-tag price-tag"/>
                    </StackLayout>
                </Repeater.itemTemplate>
            </Repeater>
            <ListView items="{{ toppings }}"
                      itemTap="onSelectTopping">
                <ListView.itemTemplate>
                    <Label text="{{ name }}"/>
                </ListView.itemTemplate>
            </ListView>
            <ListView items="{{ extras }}"
                      itemTap="onSelectExtra">
                <ListView.itemTemplate>
                    <Label text="{{ name }}"/>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
        <Label text="{{orderTotal}}" row="2"/>

    </GridLayout>
</Page>
